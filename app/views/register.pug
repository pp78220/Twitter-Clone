extends layouts/login-layout.pug
block content 
    .loginContainer
        h1 Register 
        form#registerForm(method="post", onsubmit="event.preventDefault(); validateForm();")
            input#firstName(type="text", name="firstName", placeholder="firstName" required="")
            input#lastName(type="text", name="lastName" placeholder="LasttName" required="")
            input#firstName(type="text", name="username", placeholder="Username" required="")
            input#userName(type="email", name="email", placeholder="Email" required="")
            input#password(type="password", name="password" placeholder="Password" required="")
            input#passwordConf(type="password", name="passwordConf" placeholder="Confirm Password" required="")
            input(type="submit", value="Register")
        p Already have an account ?
         a(href="/login")  Login here 
    script.
        var password = document.getElementById('password')
        var passwordConf = document.getElementById('passwordConf')
        var form1 = document.getElementById('registerForm')

        function validateForm(){
            if(password.value != passwordConf.value){
                alert('Password Not Match')
            }
            else {
                form1.submit();
            }
        }